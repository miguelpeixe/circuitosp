article#news.single-post(ng-controller="NewsController")
	header.main-header.row(ng-class="{'with-image': getFeaturedImage(post)}")
		.container
			.twelve.columns
				.image(ng-show="getFeaturedImage(post)" style="background-image:url({{getFeaturedImage(post)}})")
				h2
					a(href="/noticias/") Not√≠cias
				h1(ng-bind-html="getTitle(post)")

				#social.row				
						.fb-like(data-layout="standard" data-action="like" data-show-faces="false" data-share="true" data-width="200")
						a(href="https://twitter.com/share" class="twitter-share-button" data-via="mcifest") Tweet
						script.
							!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

	section.main-content
		.container
			.ten.columns
				p.date
					span.entypo &#128340;
					| {{getDate(post)}}

				.post(ng-bind-html="getContent(post)")