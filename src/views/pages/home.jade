section#home
	section#news.clearfix(ng-controller="NewsController" ng-show="news")

		article#featured.feat
			.image(style="background-image:url({{getFeaturedImage(news.first)}})")
			.post-content
				header
					h2
						a(href="/noticias/{{news.first.ID}}/" ng-bind-html="getTitle(news.first)")
				section.excerpt(ng-bind-html="getExcerpt(news.first)")

		article#second.feat
			.image(style="background-image:url({{getFeaturedImage(news.second)}})")
			.post-content
				header
					h2
						a(href="/noticias/{{news.second.ID}}/" ng-bind-html="getTitle(news.second)")

		a.more-news(href="/noticias") Todas as notícias


	section#event-list.box-section(ng-show="homeEvents.length")
		header.box-section-header
			.container
				.twelve.columns
					h2 Próximos eventos
		section.box-section-content
			.container
				.twelve.columns
					ul.event-list(masonry ng-controller="EventController")
						li.masonry-brick(ng-repeat="event in homeEvents" ng-click="accessEvent(event)")
							include ../events/partials/event-list-item

	section#social
		h3 Acompanhe pelas redes sociais
		p
			a(href="https://www.facebook.com/culturaindependente" target="_blank" title="Facebook" class="entypo-social fb") &#62222;
		p
			a(href="https://twitter.com/mcifest" target="_blank" title="Twitter" class="entypo-social tw") &#62217;
		.clear